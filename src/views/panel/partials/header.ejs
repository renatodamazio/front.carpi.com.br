            <a class="nav-link" href="/panel/logs">Logs</a>
          </li>
        </ul>
        <span class="navbar-text">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <a class="nav-link" href="#!" @click="logout">Sair</a>
            </li>
          </ul>
